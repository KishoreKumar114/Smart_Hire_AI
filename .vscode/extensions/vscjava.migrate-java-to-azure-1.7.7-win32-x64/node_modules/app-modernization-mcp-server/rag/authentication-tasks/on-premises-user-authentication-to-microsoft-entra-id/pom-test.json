{
  "filePattern": {
    "shouldMatch": [
      "pom.xml",
      "module/pom.xml",
      "build.gradle",
      "module/build.gradle",
      "build.gradle.kts",
      "module/build.gradle.kts"
    ],
    "shouldNotMatch": [
      "pom.txt",
      "pom.json",
      "config/properties.yaml",
      "src/main/resources/App.java"
    ]
  },
  "codePattern": {
    "shouldMatch": [
      "spring-security-ldap",
      "spring-ldap-core",
      "spring-boot-starter-data-ldap",
      "org.springframework.boot:spring-boot-starter-security"
    ],
    "shouldNotMatch": [
      "com.azure.spring:spring-cloud-azure-starter-invalid",
      "com.azure.spring:spring-cloud-azure-starter-active-directory",
      "com.azure.spring:spring-cloud-azure-starter-unknown",
      "org.springframework.boot:spring-boot-starter-invalid",
      "org.springframework.boot:spring-boot-starter-oauth2-client"
    ]
  }
  ,
  "fullTextSearch": {
    "shouldMatch": [
      "Update dependencies for user authentication to Microsoft Entra ID",
      "Update dependencies for user authentication to Microsoft Entra ID.",
      "login with Microsoft Entra ID",
      "com.azure.spring:spring-cloud-azure-starter-active-directory",
      "org.springframework.boot:spring-boot-starter-oauth2-client",
      "spring-cloud-azure-dependencies",
      "spring-boot:2.x",
      "spring-boot:3.x",
      "spring-cloud-azure-dependencies:4.19.0",
      "spring-cloud-azure-dependencies:5.22.0",
      "do not delete any existing dependencies",
      "double check that no original dependencies deleted"
    ]
  }
}
