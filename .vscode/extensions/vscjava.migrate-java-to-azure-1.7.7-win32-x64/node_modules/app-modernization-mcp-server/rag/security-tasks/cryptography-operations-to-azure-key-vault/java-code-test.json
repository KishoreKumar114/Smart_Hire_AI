{
  "filePattern": {
    "shouldMatch": [
      "ExampleClass.java",
      "nested/ExampleClass.java",
      "Main.java"
    ],
    "shouldNotMatch": [
      "AnotherClass.kt",
      "nested/ExampleClass.txt"
    ]
  },
  "codePattern": {
    "shouldMatch": [
      "Cipher cipher = Cipher.getInstance(\"AES\");",
      "Signature signature = Signature.getInstance(\"SHA256withRSA\");"
    ],
    "shouldNotMatch": [
      "String unrelated = \"UnrelatedClass\";",
      "int number = 42;"
    ]
  }
  ,
  "fullTextSearch": {
    "shouldMatch": [
      "Azure Key Vault cryptography operations",
      "migrate cryptographic operations to Azure Key Vault",
      "replace local encryption with Azure Key Vault",
      "Azure Key Vault CryptographyClient usage",
      "secure key management with Azure Key Vault",
      "SignResult signResult = client.sign(SignatureAlgorithm.RS256, digest)",
      "SignResult signResult = client.signData(SignatureAlgorithm.RS256, data)",
      "VerifyResult verifyResult = client.verify(SignatureAlgorithm.RS256, digest, signature)"
    ],
    "shouldNotMatch": [
      "Cipher.getInstance(\"DES\")",
      "Signature.getInstance(\"MD5withRSA\")",
      "String unrelated = \"UnrelatedClass\";",
      "int number = 42;"
    ]
  }
}
