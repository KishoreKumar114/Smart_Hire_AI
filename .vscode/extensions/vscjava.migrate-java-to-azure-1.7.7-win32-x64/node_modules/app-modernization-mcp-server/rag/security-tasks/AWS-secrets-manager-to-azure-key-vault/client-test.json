{
  "filePattern": {
    "shouldMatch": [
      "ExampleClass.java",
      "nested/ExampleClass.java",
      "Main.java"
    ],
    "shouldNotMatch": [
      "AnotherClass.kt",
      "nested/ExampleClass.txt"
    ]
  },
  "codePattern": {
    "shouldMatch": [
      "SecretsManagerClient client = SecretsManagerClient.builder().build();",
      "AWSSecretsManager manager = new AWSSecretsManager();",
      "SecretsManagerClientBuilder builder = SecretsManagerClient.builder();",
      "AWSSecretsManagerClientBuilder awsBuilder = AWSSecretsManagerClientBuilder.standard();"
    ],
    "shouldNotMatch": [
      "String unrelated = \"UnrelatedClass\";",
      "public class AnotherClass {}"
    ]
  }
  ,
  "fullTextSearch": {
    "shouldMatch": [
      "Migrate AWS SecretsManagerClient to Azure Key Vault SecretClient",
      "Replace AWS SecretsManager APIs with Azure Key Vault APIs",
      "Use DefaultAzureCredential for SecretClient authentication",
      "Do not modify methods/constants/configurations used by other AWS services unless exclusively used by Secrets Manager"
    ],
    "shouldNotMatch": [
      "Unrelated secrets migration",
      "Migrate to non-Azure secrets service",
      "Keep using AWS SecretsManagerClient without migration"
    ]
  }
}
