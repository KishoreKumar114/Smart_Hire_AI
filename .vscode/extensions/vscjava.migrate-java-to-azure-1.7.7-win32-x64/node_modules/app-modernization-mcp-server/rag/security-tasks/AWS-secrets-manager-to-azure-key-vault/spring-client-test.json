{
  "filePattern": {
    "shouldMatch": [
      "ExampleClass.java",
      "nested/ExampleClass.java",
      "Main.java"
    ],
    "shouldNotMatch": [
      "AnotherClass.kt",
      "nested/ExampleClass.txt",
      "ExampleClass.xml"
    ]
  },
  "codePattern": {
    "shouldMatch": [
      "SecretsManagerClient client = SecretsManagerClient.builder().region(region).build();",
      "AWSSecretsManager secretsManager = new AWSSecretsManager();",
      "SecretsManagerClientBuilder builder;",
      "AWSSecretsManagerClientBuilder builder = AWSSecretsManagerClientBuilder.standard();"
    ],
    "shouldNotMatch": [
      "SecretClient secretClient = new SecretClient();",
      "System.out.println(\"Unrelated code snippet\");",
      "String unrelated = \"UnrelatedClass\";"
    ]
  }
  ,
  "fullTextSearch": {
    "shouldMatch": [
      "Migrate AWS SecretsManagerClient to Spring Cloud Azure Key Vault SecretClient",
      "Use Spring auto-wiring for SecretClient bean",
      "Do not modify methods/constants/configurations used by other AWS services unless exclusively used by Secrets Manager"
    ],
    "shouldNotMatch": [
      "Unrelated secrets migration",
      "Migrate to non-Azure secrets service",
      "Keep using AWS SecretsManagerClient without migration"
    ]
  }
}
