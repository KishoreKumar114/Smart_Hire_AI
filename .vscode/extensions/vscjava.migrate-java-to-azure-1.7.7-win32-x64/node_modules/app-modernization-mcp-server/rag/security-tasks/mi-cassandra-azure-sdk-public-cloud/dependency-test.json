{
  "filePattern": {
    "shouldMatch": [
      "pom.xml",
      "nested/pom.xml",
      "build.gradle",
      "nested/build.gradle",
      "build.gradle.kts",
      "nested/build.gradle.kts"
    ],
    "shouldNotMatch": [
      "Application.java",
      "application.properties",
      "config.yaml"
    ]
  },
  "codePattern": {
    "shouldMatch": [
      "<artifactId>cassandra-driver-core</artifactId>",
      "<artifactId>datastax-java-driver-core</artifactId>",
      "implementation 'com.datastax.oss:java-driver-core:4.14.0'",
      "implementation group: 'com.datastax.cassandra', name: 'cassandra-driver-core', version: '3.11.0'",
      "compile 'com.datastax.oss:java-driver-query-builder:4.14.0'",
      "implementation 'org.apache.cassandra:cassandra-all:4.0.6'"
    ],
      "shouldNotMatch": [
      "<artifactId>azure-storage-queue</artifactId>",
      "testImplementation 'com.azure:azure-data-tables:12.5.0'",
      "<artifactId>mongodb-driver-sync</artifactId>",
      "implementation 'org.springframework.boot:spring-boot-starter-data-jpa:2.7.0'",
      "implementation group: 'com.azure', name: 'azure-cosmos', version: '4.45.1'",
      "<dependency>\n        <groupId>org.postgresql</groupId>\n        <artifactId>postgresql</artifactId>\n        <version>42.5.1</version>\n      </dependency>",
      "compile 'redis.clients:jedis:4.3.1'",
      "implementation 'org.neo4j:neo4j-ogm-core:3.2.37'"
    ]
  }
  ,
  "fullTextSearch": {
    "shouldMatch": [
      "Project is configured to use managed identity for Azure Cosmos DB Cassandra API.",
      "Service Connector environment variables for Cassandra are present in configuration.",
      "Properties reference Azure Cosmos DB endpoints and credentials via environment variables.",
      "Spring Boot 3.x properties are mapped from Service Connector values.",
      "Dependency list includes Azure identity and Cassandra driver for managed identity support.",
      "com.datastax.oss:java-driver-core",
      "com.datastax.oss:java-driver-query-builder",
      "com.datastax.cassandra:cassandra-driver-extras",
      "com.azure:azure-identity",
      "com.googlecode.json-simple:json-simple",
      "spring-boot-dependencies",
      "spring-cloud-azure-dependencies",
      "azure-sdk-bom"
    ],
    "shouldNotMatch": [
      "Project uses hardcoded credentials for Cassandra connection.",
      "No Service Connector environment variables found in configuration.",
      "Properties reference local Cassandra endpoints or static passwords.",
      "Dependency list lacks Azure identity or managed identity support.",
      "Configuration does not enable passwordless authentication.",
      "azure-storage-queue",
      "mongodb-driver-sync",
      "postgresql",
      "jedis",
      "neo4j-ogm-core"
    ]
  }
}
