{
  "filePattern": {
    "shouldMatch": [
      "src/MainSQL.java",
      "Sql.java"
    ],
    "shouldNotMatch": [
      "pom.xml",
      "build.gradle",
      "application.properties"
    ]
  },
  "codePattern": {
    "shouldMatch": [
      "CqlSession cqlSession = CqlSession.builder().withKeyspace(keyspace).build();"
    ],
    "shouldNotMatch": [
      "CassandraCluster cassandraCluster = new CassandraCluster();",
      "Session session = cluster.connect();",
      "DataStaxDriverSupport.getSession(cluster);",
      "Cluster.builder().addContactPoint(host).withPort(port).build();",
      "MongoClient mongoClient = MongoClients.create(connectionString);",
      "RestHighLevelClient elasticClient = new RestHighLevelClient();",
      "JdbcTemplate jdbcTemplate = new JdbcTemplate(dataSource);",
      "Connection connection = DriverManager.getConnection(url, username, password);",
      "RedisTemplate<String, Object> redisTemplate = new RedisTemplate<>();"
    ]
  }
  ,
  "fullTextSearch": {
    "shouldMatch": [
      "CqlSession.builder().withKeyspace(keyspace).build()",
      "DefaultAzureCredential defaultCredential = new DefaultAzureCredentialBuilder().build();",
      "AccessToken accessToken = defaultCredential.getToken(new TokenRequestContext().addScopes(new String[]{ scope })).block();",
      "HttpClient client = HttpClient.newBuilder()",
      "System.getenv(\"AZURE_COSMOS_PORT\")",
      "System.getenv(\"AZURE_COSMOS_USERNAME\")",
      "System.getenv(\"AZURE_COSMOS_CONTACTPOINT\")",
      "System.getenv(\"AZURE_COSMOS_KEYSPACE\")",
      "System.getenv(\"AZURE_COSMOS_LISTKEYURL\")",
      "System.getenv(\"AZURE_COSMOS_SCOPE\")"
    ],
    "shouldNotMatch": [
      "MongoClient mongoClient = MongoClients.create(connectionString);",
      "RestHighLevelClient elasticClient = new RestHighLevelClient();",
      "JdbcTemplate jdbcTemplate = new JdbcTemplate(dataSource);",
      "Connection connection = DriverManager.getConnection(url, username, password);",
      "RedisTemplate<String, Object> redisTemplate = new RedisTemplate<>();"
    ]
  }
}
