{
  "filePattern": {
    "shouldMatch": [
      "src/MainSQL.java",
      "Sql.java"
    ],
    "shouldNotMatch": [
      "pom.xml",
      "build.gradle",
      "application.properties"
    ]
  },
  "codePattern": {
    "shouldMatch": [
      "DriverManager.getConnection(url, username, password);"
    ],
    "shouldNotMatch": [
      "MongoClient mongoClient = MongoClients.create(connectionString);",
      "RestHighLevelClient elasticClient = new RestHighLevelClient();",
      "JdbcTemplate jdbcTemplate = new JdbcTemplate(dataSource);",
      "RedisTemplate<String, Object> redisTemplate = new RedisTemplate<>();"
    ]
  }
  ,
  "fullTextSearch": {
    "shouldMatch": [
      "azure mariadb authentication",
      "mariadb managed identity connection",
      "azure identity plugin configuration",
      "passwordless mariadb connection",
      "configure managed identity for mariadb",
      "mariadb connection without password",
      "&authenticationPlugins=com.azure.identity.extensions.jdbc.mariadb.AzureMariadbAuthenticationPlugin",
      "managed identity",
      "mariadb passwordless authentication"
    ],
    "shouldNotMatch": [
      "DriverManager.getConnection(url, username, password);",
      "password=",
      "hardcoded password",
      "MongoClient mongoClient = MongoClients.create(connectionString);",
      "RestHighLevelClient elasticClient = new RestHighLevelClient();",
      "JdbcTemplate jdbcTemplate = new JdbcTemplate(dataSource);",
      "RedisTemplate<String, Object> redisTemplate = new RedisTemplate<>();"
    ]
  }
}
