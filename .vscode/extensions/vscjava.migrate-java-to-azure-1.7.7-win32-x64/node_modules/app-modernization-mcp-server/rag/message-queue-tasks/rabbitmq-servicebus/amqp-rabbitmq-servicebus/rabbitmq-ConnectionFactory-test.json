{
  "filePattern": {
    "shouldMatch": [
      "RabbitConfig.java",
      "src/main/java/com/example/config/RabbitMQConfig.java",
      "nested/folder/ConnectionFactoryConfig.java",
      "Main.java"
    ],
    "shouldNotMatch": [
      "RabbitConfig.js", 
      "src/main/resources/application.properties",
      "src/main/kotlin/RabbitConfig.kt",
      "config/rabbitmq.yml"
    ]
  },
  "codePattern": {
    "shouldMatch": [
      "import org.springframework.amqp.rabbit.connection.ConnectionFactory;",
      "import org.springframework.amqp.rabbit.connection.CachingConnectionFactory;",
      "rabbit.connection.ConnectionFactory factory = new rabbit.connection.ConnectionFactory();"
    ],
    "shouldNotMatch": [
      "import org.springframework.jms.JmsException;",
      "import com.azure.messaging.servicebus.ServiceBusClientBuilder;", 
      "ServiceBusClientBuilder builder = new ServiceBusClientBuilder();",
      "import org.springframework.rabbitmq.connection; // non-existent package",
      "String rabbitMQHost = \"localhost\";"
    ]
  }
  ,
  "fullTextSearch": {
    "shouldMatch": [
      "Migrate RabbitMQ ConnectionFactory logic",
      "Migrate RabbitMQ ConnectionFactory to Service Bus Connection",
      "Remove RabbitMQ ConnectionFactory beans, class members, and variables",
      "Use Managed Identity and environment variables for Azure Service Bus connection",
      "Remove ConnectionFactory related code including host, port, username, password, virtual-host, ssl.enabled",
      "Remove all AMQP-related imports after migration",
      "Azure Service Bus auto-configuration handles connection management"
    ],
    "shouldNotMatch": [
      "Unrelated connection migration",
      "Migrate to non-Azure message queue",
      "Keep using RabbitMQ ConnectionFactory without migration"
    ]
  }
}
