{
  "filePattern": {
    "shouldMatch": [
      "application.yml",
      "src/main/resources/application.properties",
      "config/application.yaml",
      "nested/folder/config.properties", 
      "docker-compose.yml",
      "deployment/environment.yaml"
    ],
    "shouldNotMatch": [
      "application.json",
      "config.xml",
      "src/main/java/RabbitConfig.java",
      "settings.js",
      "README.md"
    ]
  },
  "codePattern": {
    "shouldMatch": [
      "server.port=8080",
      "spring.jms.listener.auto-startup=true",
      "# RabbitMQ connection settings",
      "spring.rabbitmq.host=localhost",
      "rabbitmq:\n  host: localhost\n  port: 5672",
      "amqp.exchange.name=myExchange",
      "jms.queue.name=myQueue",
      "# This is a configuration file"
    ],
    "shouldNotMatch": [
    ]
  },
  "fullTextSearch": {
    "shouldMatch": [
      "Migrate RabbitMQ configuration files to Azure Service Bus JMS configuration",
      "Update application.yml, application.properties, and related files for Service Bus JMS",
      "Remove RabbitMQ-specific configuration and add Service Bus JMS settings"
    ],
    "shouldNotMatch": [
      "Unrelated configuration migration",
      "Migrate to non-Azure message queue",
      "Keep using RabbitMQ configuration without migration"
    ]
  }
}
