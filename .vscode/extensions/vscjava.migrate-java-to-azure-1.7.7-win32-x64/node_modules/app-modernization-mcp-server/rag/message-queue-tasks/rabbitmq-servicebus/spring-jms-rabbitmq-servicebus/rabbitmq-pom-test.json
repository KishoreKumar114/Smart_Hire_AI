{
  "filePattern": {
    "shouldMatch": [
      "pom.xml",
      "project/pom.xml",
      "nested/folder/pom.xml",
      "build.gradle", 
      "module/build.gradle",
      "src/main/build.gradle.kts"
    ],
    "shouldNotMatch": [
      "build.xml",
      "pom.yaml",
      "src/main/resources/application.properties",
      "settings.gradle",
      "package.json"
    ]
  },
  "codePattern": {
    "shouldMatch": [
      "<dependency>\n\t<groupId>com.rabbitmq</groupId>\n\t<artifactId>rabbitmq-jms</artifactId>\n\t<version>1.14.0</version>\n</dependency>",
      "implementation 'com.rabbitmq:rabbitmq-jms:1.14.0'",
      "compile group: 'com.rabbitmq', name: 'rabbitmq-jms', version: '1.13.0'",
      "<artifactId>rabbitmq-jms</artifactId>",
      "dependencies {\n\timplementation 'com.rabbitmq:rabbitmq-jms:2.8.0'\n}"
    ],
    "shouldNotMatch": [
      "<dependency>\n\t<groupId>com.azure.spring</groupId>\n\t<artifactId>spring-cloud-azure-starter-servicebus-jms</artifactId>\n</dependency>",
      "implementation 'com.azure.spring:spring-cloud-azure-starter-servicebus-jms'",
      "<dependency>\n\t<groupId>org.springframework.boot</groupId>\n\t<artifactId>spring-boot-starter-web</artifactId>\n</dependency>",
      "implementation 'org.springframework.boot:spring-boot-starter-data-jpa'",
      "# RabbitMQ configuration",
      "compile group: 'com.rabbitmq', name: 'amqp-client', version: '5.14.2'"
    ]
  }
  ,
  "fullTextSearch": {
    "shouldMatch": [
      "Migrate RabbitMQ JMS dependencies to Azure Service Bus JMS dependencies",
      "Remove RabbitMQ JMS dependencies and add required dependencies for Spring Cloud Azure Service Bus JMS",
      "Add spring-cloud-azure-starter-servicebus-jms to dependencies",
      "Remove all RabbitMQ-specific dependencies after migration"
    ],
    "shouldNotMatch": [
      "Unrelated dependency migration",
      "Migrate to non-Azure message queue",
      "Keep using RabbitMQ JMS dependencies without migration"
    ]
  }
}
